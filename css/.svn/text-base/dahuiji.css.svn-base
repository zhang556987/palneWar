*{margin:0; padding:0;}
html,body{width:100%; height:100%; overflow: hidden;}
.main{
	margin: auto;
	height: 100%;
	background: url(../images/bg.jpg) repeat-y;
	background-position-y: 0px;
	width: 480px;
	position: relative;
}
.options{
	position: absolute;
	list-style: none;
	margin: auto;
	left: 0; right: 0; top: 100px;
	width: 200px;
	height: 300px;

}
.options li{
	border-radius: 5px;
	box-shadow: 0 0 20px 0px black;
	float: left;
	width: 200px;
	height: 75px;
	text-align: center;
	line-height: 75px;
	margin-bottom: 20px;
	background: #8F9293;
	color: white;
	font: "微软雅黑";
	font-size: 28px;
	cursor: pointer;
}
.logo{
	position: absolute;
	left: 0; right: 0; top: 25%;
	margin: auto;
	width: 428px; height: 104px;
	background: url(../images/logo.png) no-repeat;
}
.loading{
	position: absolute;
	left: 0; right: 0; top: 60%;
	margin: auto;
	width: 192px; height: 41px;
	background: url(../images/loading1.png) no-repeat;
}
.my-warplain{
	position: absolute;
	width: 98px;
	height: 122px;
	background: url(../images/me.png) no-repeat;
	z-index: 999;
}
.bullet{
	position: absolute;
	width: 7px; height: 18px;
	background: url(../images/bullet.png) no-repeat;
}
.bullet_die{
	position: absolute;
	width: 41px; height: 39px;
	background: url(../images/die1.png) no-repeat;
}
.enemy-small{
	position: absolute;
	width: 59px; height: 36px;
	background: url(../images/plane1.png) no-repeat;
}
.enemy-middle{
	position: absolute;
	width: 70px; height: 92px;
	background: url(../images/plane2.png) no-repeat;
}
.enemy-large{
	position: absolute;
	width:165px; height: 256px;
	background: url(../images/plane3.png) no-repeat;
}
#pauseCover,#gameOverCover{
	position: absolute;
	top: 0;
	left: 0;
	z-index: 999999;
	width: 100%;
	height: 100%;
	background: rgba(0,0,0,0.5);
	display: none;
}
#pauseCover span,#gameOverCover span{
	display: block;
	font-size: 100px;
	color: #ffffff;
	text-align: center;
	margin-top:50%;
}
input{
	margin-left: 100px;
	margin-top: 100px;
	width: 100px;
	height: 50px;
	border: none;
	background: rgba(0,0,0,0.1);
	color: #ffffff;
	cursor: pointer;
	font-size: 20px;
}
#gameScoreBox{
	position: absolute;
	bottom: 20px;
	left: 0;
	font-size: 20px;
	font-weight: bold;
}
